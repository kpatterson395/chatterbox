<%- layout("./layouts/boilerplate") %>
<div class="row">
  <div class="col-md-4">
    <h5>Login</h5>
    <form action="/login" method="POST">
      <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input
          class="form-control"
          type="text"
          id="username"
          name="username"
          required
          autofocus
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input
          class="form-control"
          type="password"
          id="password"
          name="password"
          required
        />
      </div>
      <button class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>
