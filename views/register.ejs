<%- layout("./layouts/boilerplate") %>
<div class="row">
  <div class="col-md-4">
    <h5>Register</h5>
    <form action="/register" method="POST">
      <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input
          class="form-control"
          type="text"
          id="username"
          name="user[username]"
          required
          autofocus
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input
          class="form-control"
          type="email"
          id="email"
          name="user[email]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input
          class="form-control"
          type="password"
          id="password"
          name="user[password]"
          required
        />
      </div>
      <button class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>
